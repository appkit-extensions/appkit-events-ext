{
    "options": {
        "fields": {
            "title": {
                "label": "Title",
                "description": "Title for this module.",
                "default": "News",
                "group": "General",
                "heading": "",
                "type": "String"
            },
            "enable-live-updates": {
                "label": "Enable Live Content Updates",
                "description": "Content gets automatically published without manually publishing",
                "group": "Advanced",
                "heading": "",
                "type": "YesNo"
            },
            "enable-ui-override": {
                "label": "Enable UI Override",
                "description": "Override the default UI for this module",
                "group": "Advanced",
                "heading": "",
                "type": "YesNo"
            },
            "enable-xml-editing": {
                "label": "Enable XML Editing",
                "description": "Show XML to allow advanced editing",
                "group": "Advanced",
                "heading": "",
                "type": "YesNo"
            },
            "enable-editor-access": {
                "label": "Show in Editing Area",
                "description": "Allows this module's content to be edited in the Editing area",
                "group": "Advanced",
                "heading": "Content Editing",
                "type": "YesNo"
            }
        },
        "groups": [ "General", "Advanced" ]
    },
    "data": {
        "events": {
            "child": "event",
            "name": "Event",
            "title": "title",
            "description": "summary",
            "tag":  "category",
            "key": "id",
            "thumb": "image",
            "extra": "starts",
            "sort": "starts",
            "fields": [
                {
                    "key": "id",
                    "type": "id"
                },
                {
                    "key": "title",
                    "type": "string",
                    "format": "single-line",
                    "caption": "Title",
                    "minLength": 2,
                    "maxLength": 200,
                    "required": true
                },
                {
                    "key": "category",
                    "type": "select",
                    "bind": "categories",
                    "caption": "Category",
                    "required": true
                },
                {
                    "key": "summary",
                    "type": "string",
                    "format": "multi-line",
                    "caption": "Summary",
                    "required": false
                },
                {
                    "key": "starts",
                    "type": "datetime",
                    "caption": "Starts",
                    "required": true
                },
                {
                    "key": "ends",
                    "type": "datetime",
                    "caption": "Ends",
                    "required": false
                },
                {
                    "key": "image",
                    "type": "fileref",
                    "format": "jpg, png, jpeg",
                    "caption": "Image",
                    "required": false
                },
                {
                    "key": "link",
                    "type": "string",
                    "format": "uri",
                    "caption": "Event URL",
                    "pattern": "^(https?|tel|sms|mail|itms)://[-A-Za-z0-9+&@#/%?=~_|!:,.;]*[-A-Za-z0-9+&@#/%=~_|]$",
                    "required": false,
                    "placeholder": "http://some.server.com"
                },
                {
                    "key": "content",
                    "type": "content",
                    "format": "rtf",
                    "caption": "Body",
                    "required": false
                }
            ]
        },
        "categories": {
            "child": "category",
            "name": "Category",
            "title": "name",
            "thumb": "icon",
            "key": "id",
            "fields": [
                {
                    "key": "name",
                    "type": "string",
                    "format": "single-line",
                    "caption": "Name",
                    "minLength": 2,
                    "maxLength": 200,
                    "required": true
                },
                {
                    "key": "id",
                    "type": "id"
                },
                {
                    "key": "icon",
                    "type": "fileref",
                    "format": "jpg, png, jpeg",
                    "caption": "Icon",
                    "required": true
                }
            ]
        }
    }
}
